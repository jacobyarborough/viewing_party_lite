<h1>Discover Page</h1>


<%= form_with url: "/users/#{@user_id}/movies", method: :get, local: true do |f| %>
  <%= f.hidden_field :q, value:'top_rated' %>
  <%= f.submit "Find Top Rated Movies"%>
<% end %>
<br>

<%= form_with url: "/users/#{@user_id}/movies", method: :get, local: true do |f| %>
  <%= f.hidden_field :q, value:'search' %>
  <%= f.text_field :movie_title %>
  <%= f.submit "Find Movies"%>
<% end %>