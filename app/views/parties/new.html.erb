<h1>Create a Movie Party for <%= @movie[:title] %></h1>

<h2>Viewing Party Details</h2>
<br>
<%= form_with url:"/users/#{@user_id}/movies/#{@movie[:movie_id]}/party/new", method: :post, local: true do |f| %>
  <%= f.hidden_field :movie_id, value: @movie[:movie_id] %>
  <%= f.hidden_field :user_id, value: @user_id %>
  <%= f.hidden_field :title, value: @movie[:title] %>
  <%= f.hidden_field :duration, value: @movie[:duration] %>
  <%= f.label :title %>
  <%= f.text_field :title, value: @movie[:title] %><br><br>
  <%= f.label :duration, "Duration of Party" %>
  <%= f.number_field :duration, value: @movie[:duration] %><br><br>
  <%= f.label :start_date, "Day" %>
  <%= f.date_field :start_date %><br><br>
  <%= f.label :start_time, "Start Time" %>
  <%= f.time_field :start_time %><br><br>
  <%= f.label :invite, "Invite Other Users" %>
  <% @users.each do |user| %>
  <%= f.check_box :user, value: user[:email] %><br><br>
  <% end %>
  <%= f.submit "Create Party" %>
<% end %>
